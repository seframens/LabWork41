<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel x:Name="menuStackPanel" DockPanel.Dock="Left" Background="Gray" Width="30">
            <Button x:Name="hamburgerButton" Click="HamburgerButton_Click" Width="30" HorizontalAlignment="Left" >
                <Image Source="Images/hamburgerbutton.png"/>
            </Button>
        </StackPanel>
        
        <Grid>
            <Label Content="КОНТЕНТ!"/>
        </Grid>
    </DockPanel>
</Window>
